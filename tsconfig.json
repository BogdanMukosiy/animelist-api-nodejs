{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",

        "rootDir": "./src",
        "outDir": "./dist",

        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "skipLibCheck": true,
        "sourceMap": true,

        "types": ["node", "express", "jest"]
    },
    "include": ["src/**/*"],
    "exclude": ["tests/**/*", "prisma.config.ts", "node_modules", "dist"]
}
